  "private": true,
  "scripts": {
    "dev": "next",
    "start:dev": "concurrently \"npm run watch:css\" \"npm run dev\" \"npm run typecheck -w\"",
    "build": "next build",
    "build:css": "tailwindcss --minify -i styles/global.css -o public/css/tailwind.min.css",
    "watch:css": "tailwindcss --minify -i styles/global.css -o public/css/tailwind.min.css --watch",
    "lint": "next lint",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss,yaml,yml}\"",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss,yaml,yml}\"",
    "postinstall": "npx puppeteer browsers install chrome@135.0.7049.96",
    "format": "pnpm prettier:fix && pnpm lint --fix",
    "start": "next start",
    "typecheck": "tsc",
    "generate-sitemap": "node scripts/sitemap-generator.mjs"
  },
