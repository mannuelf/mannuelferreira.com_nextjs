{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/": ["hooks/*"],
      "@icons/*": ["assets/icons/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"],
      "@api/*": ["pages/api/*"],
      "@shared/*": ["shared/*"],
      "@types/*": ["types/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest-setup.js",
    "jest.config.ts"
  ],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
