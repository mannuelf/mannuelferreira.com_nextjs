{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["pages/api/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@icons/*": ["assets/icons/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"],
      "@shared/*": ["shared/*"],
      "@types/*": ["types/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
