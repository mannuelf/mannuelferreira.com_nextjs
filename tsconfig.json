{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "pages/api/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@icons/*": [
        "assets/icons/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@mocks/*": [
        "mocks/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@types/*": [
        "types/*"
      ]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.ts",
    "jest.config.ts"
  ],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}
